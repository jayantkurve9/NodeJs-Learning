extends layouts/main-layout.pug 

block styles
	link(rel="stylesheet", href="/css/product.css")

block content
	main 
		if prods.length > 0
			//- Insted of 'div.grid', we can write '.grid'
			.grid
				each product in prods
					article.card.product-item
						header.card__header
							h1.product__title #{product.title}
						.card__image
							img(src="data:https://www.google.com/url?sa=i&url=https%3A%2F%2Fm.economictimes.com%2Ftop-trending-products%2Fbooks%2F10-best-novels-for-beginners-to-read-this-year%2Farticleshow%2F98117524.cms&psig=AOvVaw3zmvOa2ei5AD1U5IfOIiDQ&ust=1708584149353000&source=images&cd=vfe&opi=89978449&ved=0CBMQjRxqFwoTCLi5teXpu4QDFQAAAAAdAAAAABAJ", alt="A book")
						.card__content
							h2.product__price $19.99
							p.product__description A very interesting book about so many real life incidents and concepts to learn
						.card__actions
							button.btn Add to card
		else
			h1 No Products


		